{
  "name": "trio-portfolio-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:portfolio\" \"npm run dev:admin\"",
    "dev:portfolio": "npm run dev --workspace=@trio/portfolio",
    "dev:admin": "npm run dev --workspace=@trio/admin",
    "dev:portfolio-only": "npm run dev --workspace=@trio/portfolio",
    "dev:admin-only": "npm run dev --workspace=@trio/admin",
    "build": "npm run build:shared && npm run build:portfolio && npm run build:admin",
    "build:shared": "npm run build --workspace=@trio/shared",
    "build:portfolio": "npm run build --workspace=@trio/portfolio",
    "build:admin": "npm run build --workspace=@trio/admin",
    "start": "concurrently \"npm run start:portfolio\" \"npm run start:admin\"",
    "start:portfolio": "npm run start --workspace=@trio/portfolio",
    "start:admin": "npm run start --workspace=@trio/admin",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0"
  }
}
